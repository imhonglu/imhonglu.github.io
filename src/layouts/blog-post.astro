---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/base-head.astro";
import Footer from "../components/footer.astro";
import FormattedDate from "../components/formatted-date.astro";
import Header from "../components/header.astro";
import { DEFAULT_LOCALE } from "../i18n/consts";
import { useTranslations } from "../i18n/utils/use-translations";

type Props = CollectionEntry<"blog">["data"] & {
  id?: string;
};

const locale = Astro.currentLocale ?? DEFAULT_LOCALE;
const { id, title, description, createdAt, updatedAt, heroImage } = Astro.props;
const t = useTranslations(locale);
---

<html lang={locale}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			@import url("../styles/markdown.css");

			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
      }
			.markdown {
				color: rgb(var(--text-body));
			}
			.title {
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--text-secondary));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="markdown">
					<div class="title">
						<div class="date">
							<FormattedDate date={createdAt} />
							{
								updatedAt && (
									<div class="last-updated-on">
										{t("blog.lastUpdatedOn")} <FormattedDate date={updatedAt} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
				</div>
			</article>
      {id && <div class="giscus">
        <script src="https://giscus.app/client.js"
          data-repo="imhonglu/imhonglu.github.io"
          data-repo-id="R_kgDONyKRuw"
          data-category="Blog"
          data-category-id="DIC_kwDONyKRu84CmvMP"
          data-mapping="specific"
          data-term={id}
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="top"
          data-theme="preferred_color_scheme"
          data-lang={locale}
          data-loading="lazy"
          crossorigin="anonymous"
          async>
        </script>
      </div>
      }
		</main>
		<Footer />
	</body>
</html>
