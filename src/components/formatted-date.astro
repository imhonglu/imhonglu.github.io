---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(Astro.currentLocale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style>
  time {
    display: inline-block;
    width: max-content;
  }
</style>
