---
import Layout from "../layouts/blog-post-list.astro";
---
<script>
  import { LANGUAGES, DEFAULT_LOCALE } from "../i18n/consts";

  const { language } = new Intl.Locale(navigator.language);

  if (language in LANGUAGES) {
    window.location.pathname = `/${language}/`;
  } else {
    window.location.pathname = `/${DEFAULT_LOCALE}/`;
  }
</script>
<Layout />
